<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					x:Name="MainStyles">
	<LinearGradientBrush x:Key="MainColors" 
						 StartPoint="0,0" 
						 EndPoint="1,1">
		<GradientStop Color="#000000" Offset="0.0"/>
		<GradientStop Color="#5b5b5b" Offset="0.5"/>
		<GradientStop Color="#bcbcbc" Offset="1.0"/>
	</LinearGradientBrush> 
	
	<Style x:Key="InnerFrame" TargetType="Grid">
		<Setter Property="Background" Value="{StaticResource MainColors}"/>
	</Style>

</ResourceDictionary>